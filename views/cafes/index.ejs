<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/cafes/index.css" />
<%- include('../partials/nav') %>
<main>
  <h1 class="animate__animated animate__lightSpeedInLeft">☕️All Cafes☕️</h1>
  <table id="listnames">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
      </tr>
    </thead>
    <tbody>
      <% cafes.forEach((cafe) => {  %>
        <tr>
          <td><%= cafe.name %></td>
          <td><%= cafe.location %></td>
          <%# button for reviews %>
          <td>
            <form id="reviews" action="/cafes/<%= cafe._id %>" method="GET"><button class="button">REVIEWS</button>
            </form>
          </td>
          <%# button for delete cafes%>
          <td>
            <form action="/cafes/<%= cafe._id %>?_method=DELETE" method="POST">
              <button class="button" id="remove" type="submit">X</button>
          </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <h2>☕️Add Cafe☕️</h2>
  <form id="new-form" action="/cafes" method="POST">
    <label for="name-input">Name:</label>
