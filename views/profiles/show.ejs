<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/index.css" />
<%- include('../partials/nav') %>
<main>
<h1><%= profile.name %>'s Profile</h1>
<img src="<%= profile.avatar %>" alt="<%= profile.name %>'s photo">
<% profile.cafes.forEach(cafe => { %>
  <form id="favorite-cafes" action="/profiles/<%= profile._id %>/cafes/<%= cafe._id %>" method="POST">
  <button class="button"><%= profile.name %>'s Favorite Cafes</button>  
  </form>
<% }) %>
<a href="/profiles/index"><button class="button">Profiles</button></a>
<img id="lorelai" src="/images/lorelaicoffee.gif" alt="Lorelai Needs Coffee">
</main>

<%- include('../partials/footer') %>